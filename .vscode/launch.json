    "version": "0.2.0",
    "configurations": [
        {
            "name": "ui",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["start"],
            "cwd": "${workspaceFolder}/frontend",
            "console": "integratedTerminal",
        },
        {
            "name": "api",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/api",
            "module": "uvicorn",
            "args": [
                "main:app", "--reload", "--port", "8000"
            ]
        },
    ]
}